---
import "../styles/variables.css";
import "../styles/layout.css";

interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
const baseTitle = `Jon's Personal Site`;

const pageTitle = title ? `${title} | ${baseTitle}` : baseTitle;
const url = Astro.url.toString();
const preview = `${Astro.url.origin}/media/preview.png`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="icon" href="/icons/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="16x16" href="/media/icons/icon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/media/icons/icon-32x32.png" />
    <link rel="icon" type="image/png" sizes="48x48" href="/media/icons/icon-48x48.png" />
    <link rel="icon" type="image/png" sizes="64x64" href="/media/icons/icon-64x64.png" />
    <link rel="icon" type="image/png" sizes="128x128" href="/media/icons/icon-128x128.png" />
    <link rel="icon" type="image/png" sizes="256x256" href="/media/icons/icon-256x256.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/media/icons/icon-512x512.png" />

		<meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:url" content={url}>
    <meta property="og:image" content={preview}>

		<title>{pageTitle}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
