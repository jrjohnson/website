---
import "@fortawesome/fontawesome-svg-core/styles.css";
import { library, findIconDefinition, icon } from '@fortawesome/fontawesome-svg-core';
import { faGithub, faLinkedin } from '@fortawesome/free-brands-svg-icons';
import { faBlog, faKeynote, faProjectDiagram, faScroll } from '@fortawesome/pro-solid-svg-icons';
import type { IconName, IconPrefix } from "@fortawesome/fontawesome-svg-core";

library.add(faGithub, faLinkedin, faBlog, faKeynote, faProjectDiagram, faScroll);

export interface Props {
  iconName: IconName;
  prefix: IconPrefix;
}

const { iconName, prefix } = Astro.props;

const def = findIconDefinition({ prefix, iconName });

if (!def) {
  throw new Error(`Missing definition for Icon "${iconName}" in "${prefix}"`);
}
const i = icon(def);

---

<Fragment set:html={i.html} />
